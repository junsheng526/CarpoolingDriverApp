<!--            tools:listitem="@layout/row_passenger_list" />-->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/endTripBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/shape_button02"
            android:backgroundTint="@color/appleBlack"
            android:fontFamily="@font/apple"
            android:text="End Trip"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/psg4Tv" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/editTripBtn"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_button02"
            android:fontFamily="@font/apple"
            android:text="Edit Trip"
            android:textAllCaps="false"
            android:textColor="@color/appleBlack"
            app:layout_constraintBottom_toBottomOf="@+id/endTripBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/endTripBtn" />

